{
  "name": "crustball",
  "version": "0.1.0",
  "private": false,
  "description": "Stateless, interval-based distribution worker for BagsBall (BAGS ecosystem).",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "crustball": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && node ./scripts/postbuild.js",
    "dev": "tsx watch src/cli.ts",
    "start": "node dist/cli.js",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "lint": "eslint .",
    "format": "prettier -w .",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "docker:build": "docker build -t crustball:local .",
    "docker:run": "docker run --rm --env-file .env -v $(pwd)/config:/app/config crustball:local"
  },
  "dependencies": {
    "@solana/web3.js": "^1.98.0",
    "@solana/spl-token": "^0.4.9",
    "zod": "^3.23.8",
    "yaml": "^2.5.1",
    "pino": "^9.3.2",
    "pino-pretty": "^11.2.2",
    "lru-cache": "^11.0.2",
    "undici": "^6.19.8",
    "commander": "^12.1.0",
    "nanoid": "^5.0.7"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.4.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "@vitest/coverage-v8": "^2.1.8"
  }
}