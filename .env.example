# RPC
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
SOLANA_WS_URL=wss://api.mainnet-beta.solana.com

# Wallet that signs distributions (worker hot wallet). Use a low-balance key and fund just for fees + pool transfers.
# Format: JSON array of 64 bytes (solana-keygen output) OR base58 secret key.
DISTRIBUTOR_SECRET_KEY=

# Token mints
CRUSTBALL_MINT=
BAGS_MINT=

# Optional: pool account for BagsBall distributions (SPL Token account owned by distributor).
CRUSTBALL_POOL_TOKEN_ACCOUNT=

# Execution
CONFIG_PATH=./config/crustball.yaml
LOG_LEVEL=info
